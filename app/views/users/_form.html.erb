<%= form_for(@user) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email %><br />

  <%= f.label :password %><br />
  <%= f.password_field :password %><br />

  <% if sign_up %>
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %><br />
  <% end %>

  <%= f.submit submit_msg, class: "btn btn-primary" %>
<% end %>
