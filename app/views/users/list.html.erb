<% provide(:title, "List of Users") %>
<h1>List of Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Age of membership</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.birthday %></td>
      <td>registered <%= time_ago_in_words(user.created_at) %> ago </td>
    </tr>
  <% end %>
  </tbody>
</table>
