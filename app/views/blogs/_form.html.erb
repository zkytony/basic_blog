<%= form_for(:blog, url: user_blogs_path(current_user) ) do |f| %>
  
  <h3><%= f.label :title %></h3>
  <%= f.text_field :title, class: "form-control" %>

  <h3><%= f.label :content %></h3>
  <%= f.text_area :content, :size => "15x12", class: "form-control" %><br />

  <%= f.submit class: "btn btn-primary" %>
  
<% end %>
